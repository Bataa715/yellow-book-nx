{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "../../dist/out-tsc",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@yellow-book/contract": ["../../libs/contract/src/index.ts"],
      "@yellow-book/config": ["../../libs/config/src/index.ts"]
    }
  },
  "include": ["src/**/*", "../../libs/**/*"],
  "exclude": ["node_modules", "dist"]
}
